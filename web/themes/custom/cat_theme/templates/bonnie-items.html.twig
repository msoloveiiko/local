{% for item in items %}
  <div class="bonnie-item">
    <div id="overlay" class="image_wrapper">
    <img src="{{ item.cat_photo }}" alt="cats photo">
    </div>
    <div class="information-item">
    <div class="item cat_name">{% trans %}Cat name: &nbsp {% endtrans %}{{ item.cat_name }}</div>
    <div class="item your_email">{% trans %}Your email:{% endtrans %}
      <a href="mailto:{{ item.your_email }}" class="email_link">{{ item.your_email }}</a>
    </div>
    <div class="item date">{% trans %}Date added: &nbsp {% endtrans %}{{ item.date }}</div>
    </div>
  </div>
{% endfor %}
